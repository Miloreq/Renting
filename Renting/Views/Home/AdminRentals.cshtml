@using Renting.Models
@{
    ViewData["Title"] = "Wyporzyczenia";
    var statusList = Enum.GetValues(typeof(Statusenum)).Cast<Statusenum>().ToList();
    var assetsList = ViewBag.Assets as List<Asset>;
    var selectedStatus = Context.Request.Query["status"].ToString();
    var selectedAssetId = Context.Request.Query["assetId"].ToString();
}

@model List<Rental>

<div class="text-center">
    <h1 class="display-4">Wyporzyczenia</h1>
    <hr />

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show w-75 mx-auto" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij"></button>
        </div>
    }

    <br />
    <form method="get" asp-action="AdminRentals" class="mb-4 w-75 mx-auto">
        <div class="row">
            <div class="col">
                <select name="status" class="form-select">
                    <option value="">Wszystkie statusy</option>
                    @foreach (var status in statusList)
                    {
                        var isSelected = selectedStatus == status.ToString() ? "selected" : "";
                        <option value="@status" selected="@(isSelected == "selected")">@status</option>
                    }
                </select>
            </div>
            <div class="col">
                <input type="date" name="fromDate" class="form-control" value="@Context.Request.Query["fromDate"]" placeholder="Od" />
            </div>
            <div class="col">
                <input type="date" name="toDate" class="form-control" value="@Context.Request.Query["toDate"]" placeholder="Do" />
            </div>
            <div class="col">
                <select name="assetId" class="form-select">
                    <option value="">Wszystkie sprzęty</option>
                    @if (assetsList != null)
                    {
                        foreach (var asset in assetsList)
                        {
                            var isSelected = selectedAssetId == asset.Id.ToString() ? "selected" : "";
                            <option value="@asset.Id" selected="@(isSelected == "selected")">@asset.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-secondary">Filtruj</button>
            </div>
        </div>
    </form>

    <table class="table w-75 mx-auto">
        <thead>
            <tr>
                <th>Status</th>
                <th>Od</th>
                <th>Do</th>
                <th>Przedmiot</th>
                <th>Notatki</th>
                <th>Stan po zwrocie</th>
                <th>Notatki o uszkodzeniach</th>
                <th colspan="3">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rental in Model)
            {
                <tr>
                    <td>@rental.Status</td>
                    <td>@rental.FromDate.ToShortDateString()</td>
                    <td>@rental.ToDate.ToShortDateString()</td>
                    <td>@(rental.Assets?.Name ?? "-")</td>
                    <td>@rental.Notes</td>
                    <td>@rental.Condition</td>
                    <td>@rental.DamageNotes</td>
                    @if (@rental.Status == Statusenum.Pending) 
                    {
                        <td>
                            <form asp-action="Approve" asp-controller="Home" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@rental.Id" />
                                <button type="submit" class="btn btn-success">Accept</button>
                            </form>
                        </td>
                        <td>
                            <form asp-action="Reject" asp-controller="Home" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@rental.Id" />
                                <button type="submit" class="btn btn-danger">Reject</button>
                            </form>
                        </td>
                    }
                    @if (@rental.Status == Statusenum.Approved)
                    {
                        <td>
                            <form asp-action="CheckOut" asp-controller="Home" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@rental.Id" />
                                <button type="submit" class="btn btn-danger">Check Out</button>
                            </form>
                        </td>
                    }
                    @if (@rental.Status == Statusenum.CheckedOut)
                    {
                        <td>
                            <form asp-action="Return" asp-controller="Home" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@rental.Id" />
                                <select name="condition" class="form-control mb-1" required>
                                    @foreach (var stan in Enum.GetValues(typeof(Stanenum)).Cast<Stanenum>())
                                    {
                                        <option value="@stan">@stan</option>
                                    }
                                </select>
                                <textarea name="damageNotes" placeholder="Notatki o uszkodzeniach" class="form-control mb-1"></textarea>
                                <button type="submit" class="btn btn-info">Submit</button>
                            </form>
                        </td>
                    }
                    @if (@rental.Status == Statusenum.Returned || @rental.Status == Statusenum.Rejected || @rental.Status == Statusenum.Cancelled)
                    {
                        <td>
                            <form asp-action="DelRental" asp-controller="Home" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@rental.Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    }
                    <td>
                        <a asp-action="RentalDetails" asp-route-id="@rental.Id" class="btn btn-info btn-sm">Szczegóły</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




